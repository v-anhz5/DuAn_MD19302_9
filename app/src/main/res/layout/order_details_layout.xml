<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp"
    android:background="@color/white"
    android:elevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/order_detail_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_photo_512" />

    <TextView
        android:id="@+id/order_detail_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Product title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/order_detail_product_image"
        app:layout_constraintTop_toTopOf="@+id/order_detail_product_image" />

    <TextView
        android:id="@+id/order_product_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="x1"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_detail_product_title" />

    <TextView
        android:id="@+id/order_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="820.000đ"
        android:textColor="#C30303"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_product_qty" />
    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/order_product_cut_price"
        app:layout_constraintEnd_toEndOf="@+id/order_product_cut_price"
        app:layout_constraintStart_toStartOf="@+id/order_product_cut_price"
        app:layout_constraintTop_toTopOf="@+id/order_product_cut_price" />
    <View
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_detail_product_image" />
    <TextView
        android:id="@+id/order_product_cut_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="900,000đ"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_product_price"
        app:layout_constraintEnd_toStartOf="@+id/order_product_price"
        app:layout_constraintTop_toTopOf="@+id/order_product_price" />

    <TextView
        android:id="@+id/order_detail_product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="37"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/order_detail_product_image"
        app:layout_constraintTop_toBottomOf="@+id/order_detail_product_title" />

    <Button
        android:id="@+id/button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/order_detail_product_size"
        app:layout_constraintStart_toEndOf="@+id/order_detail_product_size"
        app:layout_constraintTop_toTopOf="@+id/order_detail_product_size" />


</androidx.constraintlayout.widget.ConstraintLayout>